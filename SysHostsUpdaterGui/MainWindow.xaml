<Window x:Class="SysHostsUpdaterGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sys Hosts Updater"
        Height="200"
        Width="296"
        ResizeMode="NoResize"
        Icon="logo.ico"
        FontFamily="Microsoft YaHei UI">
    <Grid>
        <Button x:Name="btnRun"
                Content="Update Now"
                HorizontalAlignment="Left"
                Margin="27,28,0,0"
                VerticalAlignment="Top"
                Width="232"
                Click="btnRun_Click"
                Height="44" />
        <Button x:Name="btnInsSvc"
                Content="Install Service"
                HorizontalAlignment="Left"
                Margin="27,99,0,0"
                VerticalAlignment="Top"
                Width="95"
                Click="btnInsSvc_Click"
                Height="37" />
        <Button x:Name="btnUninsSvc"
                Content="Uninstall Service"
                HorizontalAlignment="Left"
                Margin="140,99,0,0"
                VerticalAlignment="Top"
                Width="119"
                Click="btnUninsSvc_Click"
                Height="37" />

    </Grid>
</Window>
